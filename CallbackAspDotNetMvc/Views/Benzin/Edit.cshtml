@model CallbackAspDotNetMvc.Models.Benzin

@{
    Layout = "~/Views/Shared/_LayoutBenzin.cshtml";
}

@section Styles
{
    @Styles.Render("~/Content/bootstrap-datetimepicker")
}

@section Scripts
{
    @Scripts.Render("~/bundles/bootstrap-datetimepicker")
}




@{
    ViewBag.Title = "Редактировать заправку";
}
@using (Html.BeginForm("Edit", "Benzin", new { id = @Model.ID },
    FormMethod.Post, new { @class = "form-horizontal" }))
{
            <div class="form-group">
                <label for="datetimepicker1" class="col-sm-2 control-label">Дата заправки:</label>
                <div class='input-group date col-sm-10' id='datetimepicker1'>
                    <input type='text' class="form-control" name="payed_at" id="payed_at" placeholder="Дата платежа" value="@Model.payed_at.ToShortDateString()"/>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
    
        <script type="text/javascript">
            $(function () {
                $('#datetimepicker1').datepicker({
                    format: "dd.mm.yyyy",
                    language: "ru",
                    autoclose: true
                });
            });
        </script>
    
    
    
    <div class="form-group">
        <label for="probeg" class="col-sm-2 control-label">Пробег:</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" name="probeg" id="probeg" placeholder="Пробег" value="@Model.probeg" />
        </div>
    </div>

    <div class="form-group">
        <label for="litrs" class="col-sm-2 control-label">Количество литров:</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" name="litrs" id="litrs" placeholder="Количество литров" value="@Model.litrs" />
        </div>
    </div>

    <div class="form-group">
        <label for="summa" class="col-sm-2 control-label">Сумма:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="summa" id="summa" placeholder="Сумма" value="@Model.summa">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Сохранить</button>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            @Html.ActionLink("Назад", "Index")
        </div>
    </div>
}
